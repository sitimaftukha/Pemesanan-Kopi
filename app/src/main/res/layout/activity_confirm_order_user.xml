<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:background="@drawable/bg_all_gradient"
                android:orientation="vertical"
                android:id="@+id/rootLayout"
                tools:context=".User.Activity.ConfirmOrderUser">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_title"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/bg_confirm"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:id="@+id/relativeLayout">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp">

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/et_nama"
                        android:background="@drawable/shape"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/ic_account_black"
                        android:hint="Nama"
                        android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/et_no_telp"
                        android:background="@drawable/shape"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:inputType="number"
                        android:drawableLeft="@drawable/ic_call_black"
                        android:hint="No. Hp"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/et_alamat"
                        android:background="@drawable/shape"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/ic_location_city_black"
                        android:hint="Alamat"/>
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                    android:id="@+id/btn_confirm_order"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="22dp"
                    android:background="@drawable/button"
                    android:text="Confrim Orderr"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="18sp"/>


        </LinearLayout>
    </RelativeLayout>

    <ImageView
            android:id="@+id/user_profile_photo"
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:layout_below="@+id/login_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:elevation="4dp"
            android:src="@drawable/userpng" />

    <TextView
            android:id="@+id/usertxt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center_horizontal"
            android:text="username"
            android:fontFamily="@font/salsa"
            android:layout_below="@+id/login_title"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_marginStart="14dp"/>

    <TextView
            android:id="@+id/login_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:gravity="center_horizontal"
            android:text="Confirm Order"
            android:fontFamily="@font/berkshire_swash"
            android:textColor="#fff"
            android:textSize="38sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
</RelativeLayout>